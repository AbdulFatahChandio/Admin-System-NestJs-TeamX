generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
  output          = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstName String
  lastName  String
  userName  String?  @unique

  role String @default("user")

  orders order[]
}

model book {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title        String
  author       String
  description  String
  publish_Year String
  edition      String
  publisher    String
  price        Int    @default(100)
  Stock        Int    @default(0)

  orders order[]
}

model order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // title       String
  // author      String
  // description String
  unitPrice       Int
  quantity        Int
  totalPrice      Int
  shippingAddress String

  orderedBy user @relation(fields: [userId], references: [id])
  userId    Int

  bookOrdered book @relation(fields: [bookId], references: [id])
  bookId      Int
}

